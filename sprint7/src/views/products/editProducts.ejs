<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head')%>
<body class="bodyRegister">
    <%- include('../partials/headerIndex')%>
    
    <main class="registro">
        
        <div>
            <form action="/products/<%= event.id %>/edit?_method=put" method="post" class="formulario">
            <h3>Editar producto</h3>

                <div class="newProduct">
                    <label for="organizador" >Organizador</label>
                    <input type="text" name="organizador" id="organizador" required value="<%= event.organizer %>">
                </div>
                <div class="newProduct">
                    <label for="competencia" >Competencia</label>
                    <input type="text" name="competencia" id="competencia" required value="<%= event.competence %>">
                </div>
                <div class="newProduct">
                    <label for="oponentes" >Oponentes</label>
                    <input type="text" name="oponentes" id="oponentes" required value="<%= event.oponents%>">
                </div>
                <div class="newProduct">
                    <label for="location" >Ubicacion</label>
                    <input type="text" name="location" id="location" required value="<%= event.location %>">
                </div>
                <div class="newProduct">
                    <label for="date" >Fecha</label>
                    <input type="date" name="date" id="date" required >
                </div>
                <div class="newProduct">
                    <label for="date" >Hora</label>
                    <input type="time" name="datetime" id="date" required >
                </div>
                <div class="newProduct">
                    <label for="descripcionEvento" >Descripcion del Evento</label>
                    <textarea name="descripcion" id="descripcionEvento" value="<%= event.description%>"></textarea>
                </div>
                
                <div class="newProduct">
                    <label for="categoria" class="category">Categoria del Producto:</label>
                    <div class="cajaSubCategory">
                        <input type="radio" name="deporte" value="1" id="categoria">
                        <label for="categoria">Football</label>
                    </div>
                    <div class="cajaSubCategory">
                        <input type="radio"  name="deporte" value="2" id="categoria">
                        <label for="categoria">Basketball</label>
                    </div>
                    <div class="cajaSubCategory">
                        <input type="radio"  name="deporte" value="3" id="categoria">
                        <label for="categoria">Tennis</label>
                    </div>
                </div>
                <div class="newProduct">
                    <label for="precioEvento" >Capacidad</label>
                    <input type="text" name="capacity" id="precioEvento" placeholder="Cantidad de tickets disponibles" required>
                </div>
                <div class="newProduct">
                    <label for="precioEvento" >Precio del Evento</label>
                    <input type="text" name="precio" id="precioEvento" placeholder="Indique el menor precio disponible" required>
                </div>
                
                <button type="submit" class="confirmProd">Confirmar</button>
                
            </form>
    
        </div>
    </main>

    <%- include('../partials/footer')%>
</body>
</html>




