<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
    <body>
        <%- include('../partials/headerIndex') %>
        <main>
            <section class="principal">
                <% for (arreglo of deporte) { %>

                    <h2 class="titular"><%= arreglo[0].deporte %></h2>
                    <div class="contenedorArticulos">
                        <% for (producto of arreglo) { %>   
                            <article class="articuloDescripcion">
                                
                                
                                <img class="deporte-detail" src="/images/uploads/<%= producto.image %>"
                                alt="Evento">
                                
                                <div class="descripcionProdDetail">
                                    
                                    <p class="partido"><%= producto.oponentes %></p>
                                    <p class="ubicacion"><i class="fas fa-map-marker-alt"></i> <%= producto.location %></p>
                                    <p class="fecha"><i class="fas fa-calendar-alt"></i> <%= producto.date %></p>
                                    
                                    <p class="valorTicket">Starting at $<%= producto.precio %></p>
                                    <p class="disponibilidad"><i class="fas fa-ticket-alt"></i> Disponibilidad - 150 tickets </p>
                                    
                                    
                                </div>
                            <a href="/products/detail/<%= producto.id %>">
                                <button type="submit" class="boton-comprar" >Details</button>
                                
                            </a>
                            
                        </article>
                    <% } %>

                </div>
                <% } %>
            </section>
            
            
        </main>
        <%- include('../partials/footer')%>
    </body>
</html>